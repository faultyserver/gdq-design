{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "preserve",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "typegen",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "gdq-design": ["../dist/index"],
      "gdq-design/*": ["../dist/*"]
    }
  }
}
