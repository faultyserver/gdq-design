{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "jsx": "preserve",
    "module": "commonjs",
    "noEmit": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "gdq-design": ["./src/index.tsx"],
      "gdq-design/*": ["./src/*"]
    }
  }
}
